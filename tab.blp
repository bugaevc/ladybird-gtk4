using Gtk 4.0;
using Adw 1;

template LadybirdTab : Widget {
  Overlay overlay {
    ScrolledWindow {
      .LadybirdWebView web_view {
        notify::hovered-link => on_hovered_link_change(LadybirdTab) swapped;
        styles ["view"]
      }
    }

    [overlay]
    Label hovered_link_label {
      halign: start;
      valign: end;
      // Label binding is done in code, in order to get a nicer animation.
      // label: bind web_view.hovered-link;
      styles ["hovered-link", "hidden"]
    }
  }

  EventControllerMotion {
    enter => on_motion(LadybirdTab) swapped;
    motion => on_motion(LadybirdTab) swapped;
    leave => on_leave(LadybirdTab) swapped;
  }
}
